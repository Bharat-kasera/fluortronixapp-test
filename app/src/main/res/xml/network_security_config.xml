<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <domain-config cleartextTrafficPermitted="true">
        <!-- Allow HTTP communication with local ESP8266 devices -->
        <!-- ESP8266 SoftAP mode -->
        <domain includeSubdomains="false">192.168.4.1</domain>
        <domain includeSubdomains="false">192.168.4.2</domain>
        
        <!-- Common router/hotspot ranges -->
        <domain includeSubdomains="false">192.168.1.1</domain>
        <domain includeSubdomains="false">192.168.1.2</domain>
        <domain includeSubdomains="false">192.168.1.100</domain>
        <domain includeSubdomains="false">192.168.1.101</domain>
        <domain includeSubdomains="false">192.168.1.102</domain>
        
        <!-- Mobile hotspot ranges -->
        <domain includeSubdomains="false">192.168.43.1</domain>
        <domain includeSubdomains="false">192.168.43.2</domain>
        <domain includeSubdomains="false">192.168.43.100</domain>
        <domain includeSubdomains="false">192.168.43.101</domain>
        <domain includeSubdomains="false">192.168.43.102</domain>
        
        <!-- Samsung Galaxy hotspot range - Complete 192.168.136.x subnet -->
        <domain includeSubdomains="false">192.168.136.1</domain>
        <domain includeSubdomains="false">192.168.136.2</domain>
        <domain includeSubdomains="false">192.168.136.10</domain>
        <domain includeSubdomains="false">192.168.136.11</domain>
        <domain includeSubdomains="false">192.168.136.12</domain>
        <domain includeSubdomains="false">192.168.136.100</domain>
        <domain includeSubdomains="false">192.168.136.101</domain>
        <domain includeSubdomains="false">192.168.136.102</domain>
        <domain includeSubdomains="false">192.168.136.103</domain>
        <domain includeSubdomains="false">192.168.136.104</domain>
        <domain includeSubdomains="false">192.168.136.150</domain>
        <domain includeSubdomains="false">192.168.136.151</domain>
        <domain includeSubdomains="false">192.168.136.152</domain>
        <domain includeSubdomains="false">192.168.136.153</domain>
        <domain includeSubdomains="false">192.168.136.154</domain>
        <domain includeSubdomains="false">192.168.136.200</domain>
        <domain includeSubdomains="false">192.168.136.201</domain>
        <domain includeSubdomains="false">192.168.136.202</domain>
        <domain includeSubdomains="false">192.168.136.203</domain>
        <domain includeSubdomains="false">192.168.136.204</domain>
        
        <!-- Additional ESP8266 discovery ranges -->
        <domain includeSubdomains="false">192.168.4.100</domain>
        <domain includeSubdomains="false">192.168.4.101</domain>
        <domain includeSubdomains="false">192.168.4.102</domain>
        
        <!-- Extended mobile hotspot ranges -->
        <domain includeSubdomains="false">192.168.43.50</domain>
        <domain includeSubdomains="false">192.168.43.51</domain>
        <domain includeSubdomains="false">192.168.43.52</domain>
        <domain includeSubdomains="false">192.168.43.53</domain>
        <domain includeSubdomains="false">192.168.43.54</domain>
        
        <!-- Extended router ranges -->
        <domain includeSubdomains="false">192.168.1.50</domain>
        <domain includeSubdomains="false">192.168.1.51</domain>
        <domain includeSubdomains="false">192.168.1.52</domain>
        <domain includeSubdomains="false">192.168.1.53</domain>
        <domain includeSubdomains="false">192.168.1.54</domain>
        
        <!-- Extended Samsung Galaxy ranges -->
        <domain includeSubdomains="false">192.168.136.50</domain>
        <domain includeSubdomains="false">192.168.136.51</domain>
        <domain includeSubdomains="false">192.168.136.52</domain>
        <domain includeSubdomains="false">192.168.136.53</domain>
        <domain includeSubdomains="false">192.168.136.54</domain>
        
        <!-- Additional common ranges -->
        <domain includeSubdomains="false">192.168.137.1</domain>
        <domain includeSubdomains="false">192.168.137.2</domain>
        <domain includeSubdomains="false">192.168.137.100</domain>
        <domain includeSubdomains="false">192.168.137.101</domain>
        <domain includeSubdomains="false">192.168.137.102</domain>
        
        <!-- Common router ranges (192.168.0.x) -->
        <domain includeSubdomains="false">192.168.0.1</domain>
        <domain includeSubdomains="false">192.168.0.2</domain>
        <domain includeSubdomains="false">192.168.0.100</domain>
        <domain includeSubdomains="false">192.168.0.101</domain>
        <domain includeSubdomains="false">192.168.0.102</domain>
        <domain includeSubdomains="false">192.168.0.200</domain>
        <domain includeSubdomains="false">192.168.0.201</domain>
        
        <!-- 10.x.x.x private networks -->
        <domain includeSubdomains="false">10.0.0.1</domain>
        <domain includeSubdomains="false">10.0.0.2</domain>
        <domain includeSubdomains="false">10.0.0.100</domain>
        <domain includeSubdomains="false">10.0.0.101</domain>
        <domain includeSubdomains="false">10.0.0.102</domain>
        
        <!-- mDNS support -->
        <domain includeSubdomains="false">fluortronix.local</domain>
    </domain-config>
    
    <!-- Allow cleartext traffic for local development and ESP devices -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system"/>
        </trust-anchors>
    </base-config>
</network-security-config> 