<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- PRODUCTION-READY: Allow cleartext to ALL private networks -->
    <!-- This is the ONLY way to make Android work with all local IPs -->
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <certificates src="system"/>
        </trust-anchors>
    </base-config>
    
    <!-- Additional explicit allowlist for ESP and common local IPs -->
    <domain-config cleartextTrafficPermitted="true">
        <!-- ESP Soft AP (Standard IP for ALL ESP devices) -->
        <domain includeSubdomains="false">192.168.4.1</domain>
        
        <!-- Common router gateway IPs -->
        <domain includeSubdomains="false">192.168.1.1</domain>
        <domain includeSubdomains="false">192.168.0.1</domain>
        <domain includeSubdomains="false">10.0.0.1</domain>
        
        <!-- mDNS Support -->
        <domain includeSubdomains="false">*.local</domain>
    </domain-config>
</network-security-config> 